@model Login.Models.ApplicationUser.ProfileModelList
@{
    ViewData["Title"] = "Score Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; margin-top:2%">Top Profiles</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Username</th>
            <th scope="col">Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var users in Model.ProfileList)
        {
        <tr>
            <th>
                @if (users.ProfileImageUrl == null)
                {
                    <div>
                        No Image
                    </div>
                }
                else
                {
                    <img src="@users.ProfileImageUrl" alt="Image" style="width: 200px; height:200px;" />
                }
            </th>
            <th>
                <a asp-action="Index" asp-controller="Profile" asp-route-username="@users.Username">
                    @users.Username
                </a>
            </th>
            <th>@users.UserRating</th>
        </tr>
        }
    </tbody>
</table>