@{
    ViewData["Title"] = "Manage Channel";
}

@model Login.Models.Channel

<div class="text-center">
    <h1 class="display-4">Welcome to @Model.Title management</h1>
    <div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateChannel" asp-route-id=@Model.Title>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Channel" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
        <a class="clickthing" asp-area="" asp-controller="Channel" asp-action="RemoveMembers" asp-route-id=@Model.Title><h4>Remove Members</h4></a>
        <a class="clickthing" asp-area="" asp-controller="Channel" asp-action="Delete" asp-route-id=@Model.Title><h4>Delete Channel</h4></a>
    </div>
</div>
