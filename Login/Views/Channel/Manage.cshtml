@{
    ViewData["Title"] = "Manage Channel";
}

@model Login.Models.Channel

<div class="text-center">
    <h1 class="display-4">@Model.Title Management</h1>
    <div>
        <a class="clickthing" asp-area="" asp-controller="Channel" asp-action="Main" asp-route-id=@Model.Title><h4>Back</h4></a>
<div class="row">
    <div class="manage-channel">
        <form asp-action="UpdateChannel" asp-route-id=@Model.Title>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label class="control-label">Channel tags</label>
                <input type="tags" name="tags" placeholder="Separate tags with comas" value=@ViewData["Tags"] />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="createButton" />
                <br>
                <input onclick="alertMessage()" type="submit"  value="Delete Channel" class="createButton" asp-area="" asp-controller="Channel" asp-action="Delete" asp-route-id=@Model.Title>
            </div>
        </form>
    </div>
</div>
    </div>
</div>
