@model Login.Models.Channel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if ((bool)ViewData["Exists"]) 
{
    <h2>Channel with this title already exists!</h2>
}

<hr />
<div class="row">
    <div class="create-channel">
        <form asp-action="CreateChannel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h1>Create Channel</h1>
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control w-100" maxlength="32" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control w-100" maxlength="256" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Channel tags</label>
                <input class="form-control w-100" type="tags" name="tags" placeholder="Separate tags with comas" maxlength="64" />
            </div>
            @* <div class="form-group">
                <label>Private</label>
                <input data-val="true" 
                    data-val-required="The isPrivate field is required." 
                    id="checkbox" 
                    name="isPrivate" 
                    type="checkbox" 
                    value="true" />

                <input name="isPrivate" type="hidden" value="false" />
            </div> *@
            <br> 
            <div class="form-group">
                <input type="submit" value="Create Channel" class="createButton" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
