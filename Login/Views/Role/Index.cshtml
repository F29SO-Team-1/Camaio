@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Roles</h1>
<a class="btn btn-primary" asp-action="CreateRole">Create</a>
<a class="btn btn-primary" asp-action="MakeAdmin">Make user admin</a>
<a class="btn btn-primary" asp-controller="Role" asp-action="AssignUser"> Assign User A Role</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Options</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete 
                        </button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
</table>  