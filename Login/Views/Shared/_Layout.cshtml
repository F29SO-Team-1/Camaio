@using Microsoft.AspNetCore.Identity
@using Login.Areas.Identity.Data
@inject SignInManager<LoginUser> SignInManager
@inject UserManager<LoginUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Camaio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  
	<header class="border-bottom box-shadow">
		<a class="home-image" asp-area="" asp-controller="Home" asp-action="Index"></a>
		<div class="input-group rounded">
			<input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"></input>
			<div class="input-group-append">
				<button type="submit" class="btn btn-light" >
                    <img src="~/pictures/search.png" style="width:23px"/> 
                </button>
			</div>
		</div>

		<div class="login-details">
			<partial name="_LoginPartial" />
		</div>
	</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Camaio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>