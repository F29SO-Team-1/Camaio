@using Microsoft.AspNetCore.Identity
@using Login.Areas.Identity.Data
@inject SignInManager<LoginUser> SignInManager
@inject UserManager<LoginUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Camaio - A university driven project made by students providing a social media platform without any human in the pictures. " />
    <title>@ViewData["Title"] Camaio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  
	<header class="border-bottom box-shadow" partial name="_HeaderPartial">
		<a class="home-image" asp-area="" asp-controller="Home" asp-action="Index">
			<img src="~/pictures/home.png" style="width: 50px" />
		</a>

        <form class="input-group rounded" asp-area="" asp-controller="Search" asp-action="Index">
			<input type="search" class="form-control rounded" name="searchInput" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
			<div class="input-group-append">
				<button type="submit" class="btn btn-light search-button" >
                    <img src="~/pictures/search.png" style="width:23px"/> 
                </button>
			</div>
            <input name="searchArea" value="All" type="hidden">
            <input name="searchOptions" value="Keywords" type="hidden">
            <input name="sortingOptions" value="Votes" type="hidden">
        </form>

		<div class="login-details">
			<partial name="_LoginPartial" />
		</div>
	</header>

    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Camaio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>