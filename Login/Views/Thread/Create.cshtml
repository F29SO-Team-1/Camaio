@model Login.Models.Threadl.ThreadModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="row">
    <div class="upload-form">
        <h1>Upload Images</h1>
        <form asp-action="AddThread" asp-route-albumId=@ViewData["albumId"] enctype="multipart/form-data" method="post">
            <div class="form-group">
                <p>Title: </p>
                <span asp-validation-for="Title"></span>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <p>Description: </p>
                <span asp-validation-for="Description"></span>
                <input asp-for="Description" class="form-control" maxlength="256"/>
            </div>
            <div class="form-group">
                <p>Threads tags:</p>
                <!--<label class="control-label"></label> --> 
                <input type="tags" name="tags" placeholder="Separate tags with comas" maxlength="64" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Picture">Picture: </label>
                <span asp-validation-for="Picture"></span>
                <input asp-for="Picture" type="file" id="file" name="file" />
            </div>
            <br />
            <button type="submit" id="btn-light submitThreadBtn" class="createButton">
                Submit
            </button>
            <input asp-for="AuthorId" type="hidden">
            <input asp-for="Created" type="hidden">
            <input asp-for="AuthorUserName" type="hidden">
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
