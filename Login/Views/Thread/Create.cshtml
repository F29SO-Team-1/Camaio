@model Login.Models.Threadl.ThreadModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="auth-form">
    <div class="content">
        <section>
            <form asp-action="AddThread" asp-route-albumId=@ViewData["albumId"] enctype="multipart/form-data" method="post">
                <div class="content">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="content">
                    <div class="form-group">
                        <label>Title: </label>
                        <span asp-validation-for="Title"></span>
                        <input asp-for="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Description: </label>
                        <span asp-validation-for="Description"></span>
                        <input asp-for="Description" class="form-control" maxlength="256"/>
                    </div>
                    <div class="form-group">
                        <label>Threads tags:</label>
                        <!--<label class="control-label"></label> --> 
                        <input type="tags" name="tags" placeholder="Separate with commas" maxlength="64" class="form-control"/>
                    </div>
                    <br />
                    <button type="submit" id="btn-light submitThreadBtn" class="createButton">
                        Submit
                    </button>
                    <input asp-for="AuthorId" type="hidden">
                    <input asp-for="Created" type="hidden">
                    <input asp-for="AuthorUserName" type="hidden">


                </div>
            </form>
        </section>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
