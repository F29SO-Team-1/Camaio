@model Login.Models.Threadl.ThreadModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Thread</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddThread" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <span asp-validation-for="Title"></span>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <span asp-validation-for="Description"></span>
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Picture"></label>
                <span asp-validation-for="Picture"></span>
                <input asp-for="Picture" type="file" id="file" name="file"/>
            </div>
            <button type="submit" id="submitThreadBtn" class="btn btn-submitThread">
                Submit
            </button>
            <input asp-for="AuthorId" type="hidden">
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
