@model Login.Models.Thread

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="auth-form p-2 d-flex flex-column">
    <div class="content">
        <h1>@ViewData["Title"] Thread</h1> 
    </div>
    

