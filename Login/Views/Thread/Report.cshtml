@model Login.Models.Thread

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Report Thread</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.Image)
            </dt>
            <dd class="col-sm-12">
                <image src="@Html.DisplayFor(Model => Model.Image)" style="width:75%;height:75%;"></image>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Votes)
            </dt>
            <dd class="col-sm-12">
                @Html.DisplayFor(model => model.Votes)
            </dd>
        </dl>

        @using (Html.BeginForm("Report", null, FormMethod.Post))
        {
            <h4>Reason For Report:</h4>
            <div class="container">
                <div class="form-group">
                    <input name="tos" class="form-check-input" type="checkbox" id="TOS" value="1">
                    <label class="form-check-label" for="flexCheckDefault">
                        Violation Of Terms Of Service
                    </label>
                </div>
                <div class="form-group">
                    <input name="inappropriate" class="form-check-input" type="checkbox" id="Inappropriate" value="2">
                    <label class="form-check-label" for="flexCheckDefault">
                        Inappropriate
                    </label>
                </div>
                <div class="form-group">
                    <input name="offensive" class="form-check-input" type="checkbox" id="Offensive" value="3">
                    <label class="form-check-label" for="flexCheckDefault">
                        Offensive
                    </label>
                </div>
                <div class="form-group">
                    <input name="otherReason" class="form-check-input" type="checkbox" id="OtherReason" value="4">
                    <label class="form-check-label" for="flexCheckDefault">
                        Other Reason
                    </label>
                </div>
            </div>
            <input class="btn btn-primary" type="submit" value="Submit" />
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}