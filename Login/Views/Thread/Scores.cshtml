@model Login.Models.Threadl.ThreadList
@{
    ViewData["Title"] = "Score Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center; margin-top:2%">Top Posts</h1>
<div class="top-score-row">
  <div class="top-score-column">
    <div class="top-score-card">
      <h3>Card 1</h3>
      <p>Some text</p>
      <p>Some text</p>
    </div>
  </div>

    <div class="top-score-column">
    <div class="top-score-card">
      <h3>Card 2</h3>
      <p>Some text</p>
      <p>Some text</p>
    </div>
  </div>
  
  <div class="top-score-column">
    <div class="top-score-card">
      <h3>Card 3</h3>
      <p>Some text</p>
      <p>Some text</p>
    </div>
  </div>

</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Rating</th>
            <th scope="col">Created</th>
            <th scope="col">Picture</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var threads in Model.ThreadLists)
        {
            <tr>
                <th>
                    <a asp-action="Index" asp-controller="Thread" asp-route-id="@threads.Id">
                        @threads.Title
                    </a>
                </th>
                <th>@threads.Rating</th>
                <td>@threads.Created</td>
                <td>
                    <img src="@threads.Picture" alt="Image" style="width: 200px; height:200px;" />
                </td>
            </tr>
        }
    </tbody>
</table>