@{
    ViewData["Title"] = "Post Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Upload System</h1>

    <form asp-controller="Post" asp-action="Index" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>

    

</div>